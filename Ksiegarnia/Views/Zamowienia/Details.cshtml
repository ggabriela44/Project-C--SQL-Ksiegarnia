@model Zamowienie
@{
    ViewData["Title"] = "Informacje o Zamówieniu";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Złóż Zamówienie</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     <div class="form-group">
                        <label asp-for="KlientID" class="control-label"></label>
                        <input asp-for="KlientID" class="form-control" readonly />
                        <span asp-validation-for="KlientID" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="DostawaID" class="control-label"></label>
                        <input asp-for="DostawaID" class="form-control" readonly/>
                        <span asp-validation-for="DostawaID" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Cena_ksiazek" class="control-label"></label>
                        <input asp-for="Cena_ksiazek" class="form-control" readonly/>
                        <span asp-validation-for="Cena_ksiazek" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Cena_dostawy" class="control-label"></label>
                        <input asp-for="Cena_dostawy" class="form-control" readonly />
                        <span asp-validation-for="Cena_dostawy" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Typ_zaplaty" class="control-label"></label>
                        <input asp-for="Typ_zaplaty" class="form-control" readonly/>
                        <span asp-validation-for="Typ_zaplaty" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Ulica" class="control-label"></label>
                        <input asp-for="Ulica" class="form-control"readonly />
                        <span asp-validation-for="Ulica" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Nr_domu" class="control-label"></label>
                        <input asp-for="Nr_domu" class="form-control" readonly/>
                        <span asp-validation-for="Nr_domu" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Miejscowosc" class="control-label"></label>
                        <input asp-for="Miejscowosc" class="form-control" readonly/>
                        <span asp-validation-for="Miejscowosc" class="text-danger"></span>
                    </div>
                      <div class="form-group">
                        <label asp-for="Kod_pocztowy" class="control-label"></label>
                        <input asp-for="Kod_pocztowy" class="form-control" readonly/>
                        <span asp-validation-for="Kod_pocztowy" class="text-danger"></span>
                    </div>

                    <br />
                    <br />

                    <div class="form-group">
                        <a class="btn btn-outline-secondary" asp-action="Index">Pokaż wszystko</a>
                        <a class="btn btn-outline-sucEdycjaloat-right" asp-action="Edit" asp-route-id="@Model.Id_zamowienia">Edycja</a>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
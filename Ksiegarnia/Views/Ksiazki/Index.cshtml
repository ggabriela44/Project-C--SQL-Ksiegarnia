@model IEnumerable<Ksiazka>

@{
    ViewData["Title"] = "Lista książek";
}

@*Write code*@

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Tytul
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Autor: </b>@item.Autor</p>
                            <p class="card-text"><b>Gatunek: </b>@item.GatunekID</p>
                            <p class="card-text"><b>Ocena: </b>@item.Ocena</p>
                            
                                  </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card-footer ">
                                <p class="card-text">
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id_ksiazka"><i class="bi bi-pencil-square"></i> Edycja </a>
                                    <a class="btn btn-outline-primary float-right" aps-controller="Ksiazki" asp-action="Details" asp-route-id="@item.Id_ksiazka"><i class="bi bi-eye-fill"></i> Zobacz więcej..</a>
                                    <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Cena.ToString("c"))</a>
                                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id_ksiazka"><i class="bi bi-trash"></i>Usuń</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    }
</div>
<div style="position:fixed; right:25px; bottom:10%;" class="text-white">
    <a asp-controller="Ksiazki" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i></a>
</div>
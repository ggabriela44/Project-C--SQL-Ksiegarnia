@model Ksiazka

@{
    ViewData["Title"] = "Usuń książkę";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Potwierdzenie usunięcia @Model.Tytul</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div class="form-group">
                        <label asp-for="Tytul" class="control-label"></label>
                        <input asp-for="Tytul" class="form-control" readonly/>
                        <span asp-validation-for="Tytul" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Autor" class="control-label"></label>
                        <input asp-for="Autor" class="form-control" readonly />
                        <span asp-validation-for="Autor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GatunekID" class="control-label"></label>
                        <input asp-for="GatunekID" class="form-control" readonly/>
                        <span asp-validation-for="GatunekID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ocena" class="control-label"></label>
                        <input asp-for="Ocena" class="form-control" readonly/>
                        <span asp-validation-for="Ocena" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Wydawnictwo" class="control-label"></label>
                        <input asp-for="Wydawnictwo" class="form-control" readonly/>
                        <span asp-validation-for="Wydawnictwo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data_wydania" class="control-label"></label>
                        <input asp-for="Data_wydania" class="form-control" readonly/>
                        <span asp-validation-for="Data_wydania" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Cena" class="control-label"></label>
                        <input asp-for="Cena" class="form-control" readonly/>
                        <span asp-validation-for="Cena" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label"></label>
                        <input asp-for="Opis" class="form-control" readonly/>
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                    <br />
                    <br />

                    <div class="form-group">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id_ksiazka"/>
                            <input type="submit" value="Potwierdz" class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Pokaż wszystko</a>
                        
                    </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

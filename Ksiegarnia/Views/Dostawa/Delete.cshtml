@model Dostawa
@{
    ViewData["Title"] = "Dodaj Dostawa";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Dodaj nowy rodzaj Dostawy</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Typ" class="control-label"></label>
                        <input asp-for="Typ" class="form-control" readonly/>
                        <span asp-validation-for="Typ" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Oplata" class="control-label"></label>
                        <input asp-for="Oplata" class="form-control" readonly/>
                        <span asp-validation-for="Oplata" class="text-danger"></span>
                    </div>
                    
                    <br />
                    <br />

                     <div class="form-group">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id_dostawa"/>
                            <input type="submit" value="Potwierdz" class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Pokaż wszystko</a>
                        </div>
            </div>
        </div>
    </div>
</div>



@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

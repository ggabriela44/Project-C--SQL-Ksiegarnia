@model Dostawa
@{
    ViewData["Title"] = "Dodaj Dostawa";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Dodaj nowy rodzaj Dostawy</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Typ" class="control-label"></label>
                        <input asp-for="Typ" class="form-control" />
                        <span asp-validation-for="Typ" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Oplata" class="control-label"></label>
                        <input asp-for="Oplata" class="form-control" />
                        <span asp-validation-for="Oplata" class="text-danger"></span>
                    </div>
                    
                    <br />
                    <br />

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Wróć</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model IEnumerable<Gatunek>

@{
    ViewData["Title"] = "Rodzaje Gatunków";
}

@*Write code*@

<div class="row">
       <div class="col-md-8 offset-md-2">

           <table class="table">
               <thread>
                   <tr>
                      <th>@Html.DisplayNameFor(model => model.Id_gatunek)</th>
                       <th>@Html.DisplayNameFor(model => model.Gatunek_ksiazki)</th>
                       <th>Akcje</th>
                   </tr>
               </thread>
               <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                    <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Id_gatunek)
                                    </td>
                                <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Gatunek_ksiazki)
                                </td>             
                                <td class="align-middle">
                                         <a asp-controller="Gatunek" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle">Dodaj</i></a>
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id_gatunek"><i class="bi bi-pencil-square"></i> Edycja </a>
                                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id_gatunek"><i class="bi bi-trash"></i>Usuń</a>
                                </td>
                            </tr>
                }
            </tbody>
           </table>
       </div>
</div>
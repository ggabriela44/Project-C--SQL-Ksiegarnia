@model IEnumerable<Klient>

@{
    ViewData["Title"] = "Lista klientów";
}

@*Write code*@

<div class="row">
       <div class="col-md-8 offset-md-2">

           <table class="table">
               <thread>
                   <tr>
                       <th>@Html.DisplayNameFor(model => model.Imie)</th>
                       <th>@Html.DisplayNameFor(model => model.Nazwisko)</th>
                       <th>@Html.DisplayNameFor(model => model.Nr_telefon)</th>
                       <th>@Html.DisplayNameFor(model => model.Email)</th>
                       <th>Akcje</th>
                   </tr>
               </thread>
               <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Imie)
                            </td>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nazwisko)
                            </td>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Nr_telefon)
                            </td>
                            <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="align-middle">
                                <a asp-controller="Klienci" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle">Dodaj</i></a>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id_klient"><i class="bi bi-pencil-square"></i> Edycja </a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id_klient"><i class="bi bi-trash"></i>Usuń</a>
                            </td>
                        </tr>
                }
            </tbody>
           </table>
       </div>
</div>